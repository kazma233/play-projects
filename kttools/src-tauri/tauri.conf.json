{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kt-tools",
  "version": "0.1.0",
  "identifier": "com.kt-tools.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kt-tools",
        "width": 1200,
        "height": 800,
        "minWidth": 640,
        "minHeight": 400,
        "resizable": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
